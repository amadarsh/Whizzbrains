
@{
    ViewBag.Title = "Index";
}

<main class="main">
    <section class="container-main">
        <div class="center">
            <div class="banner-home">
                <div class="heading-block">
                    <h1 class="heading-primary heading-primary--banner">Websites . Responsive . Mobile Compatible.</h1>
                    <div class="sub-heading sub-heading--banner">Create a creative and responsive site with us!</div>
                </div>
                <div class="banner-img-block clearfix">
                    <div class="banner-img banner-img-1">
                        <div class="overlay"></div>
                        <div class="banner-img-text">
                            <h1 class="heading-primary">Technology</h1>
                            <h2 class="heading-secondary">Our technical team will deliver beautiful, efficient code combined with some smartest ideas</h2>
                        </div>
                    </div>
                    <div class="banner-img banner-img-2">
                        <div class="banner-img-text-center">
                            <div class="heading-primary">HTML/CSS/JS</div>
                            <div class="heading-primary">Web Apps</div>
                            <div class="heading-primary">Reports/Metrics</div>
                            <div class="heading-primary">Server Side services</div>
