<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WhizzBrains</title>
    <link href="~/Content/reset.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/icons/style.css" rel="stylesheet" />
    <link href="~/Content/magnific-popup.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Damion|Lato:400,300,400italic,700italic|Merriweather+Sans:400,700|Josefin+Sans:400,400i,700|Monoton' rel='stylesheet' type='text/css'>
    <script src="~/Scripts/Script.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/wow.min.js" type="text/javascript"></script>
    <script src="~/Scripts/imagesloaded.pkgd.min.js" type="text/javascript"></script>
    <script src="~/scripts/jquery.magnific-popup.min.js"></script>
</head>
<body>
    <header class="header clearfix">
        <div class="logo-block grid-child">
            <a href="@Url.Action("Index","Home")" class="logo">WhizzBrains</a>
        </div>
        <a href="" class="nav-trigger icon-menu"></a>
        <nav class="nav-block">
            <ul class="ul-base nav">
                <li><a href="@Url.Action("Overview","Home")">Overview</a></li>
                <li><a href="@Url.Action("Team","Home")">Team</a></li>
                <li><a href="@Url.Action("Contact","Home")">Contact</a></li>
                <li><a href="#popup-sign-up" class="button button-email-us">Email us</a></li>
            </ul>
        </nav>
    </header>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <!-- Lightbox: Sign up content -->
        <div id="popup-sign-up" class="popup-inline mfp-hide">
            <div class="heading-block">
                <h2 class="heading-secondary">Contact Whizzbrainers</h2>
                <div class="sub-heading">Drop us a line</div>
            </div>
            <form class="form-sign-up js-form-validate">
                <div class="grid-parent">
                    <div class="field-block sign-up-each grid-child">
                        <label for="s-username" class="label label-required">Your Name</label>
                        <input type="text" class="input-text input-required" id="s-username">
                    </div>
                    <div class="field-block sign-up-each grid-child">
                        <label for="s-email" class="label label-required">Your Email</label>
                        <input type="email" class="input-text input-required" id="s-email">
                    </div>
                    <div class="field-block sign-up-each grid-child">
                        <label for="s-phone" class="label label-required">Your Phone number</label>
                        <input type="tel" class="input-text input-required" id="s-phone">
                    </div>
                </div> <!-- /grid-parent -->
                <div class="grid-parent">
                    <div class="field-block sign-up-each grid-child">
                        <label for="s-text" class="label">Add text here</label>
                        <textarea class="input-text" id="s-text"></textarea>
                    </div>
                </div> <!-- /grid-parent -->
                <div class="field-block">
                    <input type="submit" class="button full-width" value="Email">
                </div>
            </form>
        </div> <!-- /popup-inline -->
    </div>
    <footer class="footer">
        <div class="container-full">
            <div class="grid-parent">
                <div class="footer-social-block grid-child">
                    <a href="#" class="footer-social-each" aria-label="LinkedIn link">
                        <span class="icon-round-wrap">
                            <span class="icon-linkedin color-linkedin dead-center"></span>
                        </span>
                    </a>
                </div>
                <div class="footer-copyright-block">
                    <div>Copyright 2016, WhizzBRAINS, Inc</div>
                </div>
            </div>
        </div>
    </footer>

    <script>
        $(document).ready(headerNavActive);
    </script>
</body>
</html>